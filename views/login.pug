extends layout

block content
    .container
        h1 Login

        .card
            .card-body
                form.form(class='form-signin', action='/login', method='POST')
                    .form-group
                        label Username
                        input.form-control(
                            type='text'
                            name='username'
                            placeholder='Email'
                            required
                            autofocus
                        )
                    .form-group
                        label Password
                        input.form-control(
                            type='password'
                            name='password'
                            placeholder='Password'
                            required
                        )

                    .form-group
                        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

                    each message in flash
                        .alert.alert-warning(role="alert") #{message}

        a.btn-.btn-link.text-center(href='/signup') Create an account


